@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card shadow-sm">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h4 class="card-title mb-1">Adres Bilgisi Güncelle</h4>
                        <p class="text-muted mb-0" style="font-size:13px;">
                            Adres açıklamaları ve harita linkini düzenleyin.
                        </p>
                    </div>

                    <a href="/Address/Index" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                        <i class="mdi mdi-arrow-left mr-1"></i>
                        Listeye Dön
                    </a>
                </div>

                <form class="forms-sample" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @Html.HiddenFor(x => x.AddressID)

                    <div class="form-group">
                        <label>Adres</label>
                        <span asp-validation-for="Description1" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Description1" />
                    </div>

                    <div class="form-group">
                        <label>Mail</label>
                        <span asp-validation-for="Description2" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Description2" />
                    </div>

                    <div class="form-group">
                        <label>İlçe/İl</label>
                        <span asp-validation-for="Description3" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Description3" />
                    </div>

                    <div class="form-group">
                        <label>Telefon</label>
                        <span asp-validation-for="Description4" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Description4" />
                    </div>

                    <div class="form-group">
                        <label>Harita Konumu (Embed Link)</label>
                        <span asp-validation-for="MapInfo" class="text-danger"></span>

                        <input type="text" class="form-control" asp-for="MapInfo"
                               placeholder="Sadece link yapıştır: https://www.google.com/maps/embed?pb=..." />

                        <small class="text-muted">
                            Google Maps → Paylaş → <b>Harita Yerleştir</b> → çıkan HTML'deki <b>src</b> linkini kopyala.
                            (Sadece link)
                        </small>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-success btn-sm d-inline-flex align-items-center">
                            <i class="mdi mdi-check-circle-outline mr-1"></i>
                            Güncelle
                        </button>

                        <a href="/Address/Index" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                            <i class="mdi mdi-close-circle-outline mr-1"></i>
                            Vazgeç
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="mb-2">Harita Önizleme</h5>
                <p class="text-muted" style="font-size:13px;">
                    Kaydetmeden önce konumu kontrol edebilirsin.
                </p>

                @if (!string.IsNullOrWhiteSpace(Model?.MapInfo))
                {
                    <iframe src="@Model.MapInfo"
                            width="100%" height="380"
                            style="border:0;border-radius:12px;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        Harita linki girilmemiş. <b>MapInfo</b> alanına embed linki ekleyince burada görünecek.
                    </div>
                }
            </div>
        </div>
    </div>

</div>