@using EntityLayer.Concrete
@model List<Contact>

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <p class="card-title mb-0">Son 4 Mesaj</p>
                    <a href="/Contact/Index" class="btn btn-light btn-sm">Tümünü Gör</a>
                </div>

                @if (Model == null || Model.Count == 0)
                {
                    <div class="alert alert-info mt-3">Henüz mesaj yok.</div>
                }
                else
                {
                    <div class="table-responsive mt-3">
                        <table id="recent-purchases-listing" class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Mail</th>
                                    <th>Tarih</th>
                                    <th class="text-center">Mesaj</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                        <td class="text-center align-middle">
                                            <a href="/Contact/MessageDetails/@item.ContactID"
                                               class="btn btn-outline-primary btn-sm d-inline-flex align-items-center">
                                                <i class="mdi mdi-email-open-outline me-1"></i>
                                                Mesajı Gör
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

            </div>
        </div>
    </div>
</div>