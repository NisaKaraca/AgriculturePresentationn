<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body dashboard-tabs p-0">

                <ul class="nav nav-tabs px-4" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="overview-tab" data-bs-toggle="tab" href="#overview" role="tab"
                           aria-controls="overview" aria-selected="true">
                            <i class="mdi mdi-chart-line me-1"></i> Genel İstatistikler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" id="sales-tab" data-bs-toggle="tab" href="#sales" role="tab"
                           aria-controls="sales" aria-selected="false">
                            <i class="mdi mdi-file-document-outline me-1"></i> Raporlar
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" id="purchases-tab" data-bs-toggle="tab" href="#purchases" role="tab"
                           aria-controls="purchases" aria-selected="false">
                            <i class="mdi mdi-account-group me-1"></i> Ekip ve Roller
                        </a>
                    </li>
                </ul>

                <div class="tab-content py-0 px-0">

                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                        <div class="d-flex flex-wrap justify-content-xl-between">

                            <div class="d-none d-xl-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-calendar-heart icon-lg me-3 text-primary"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Tarih</small>
                                    <h5 class="mb-0 d-inline-block">@DateTime.Now.ToShortDateString()</h5>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-account-multiple me-3 icon-lg text-danger"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Çalışan Sayısı</small>
                                    <h5 class="me-2 mb-0">@ViewBag.teamCount</h5>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-eye me-3 icon-lg text-success"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Hizmet Sayısı</small>
                                    <h5 class="me-2 mb-0">@ViewBag.serviceCount</h5>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-email-outline me-3 icon-lg text-warning"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Gelen Mesaj</small>
                                    <h5 class="me-2 mb-0">@ViewBag.messageCount</h5>
                                </div>
                            </div>

                            <div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-calendar-check me-3 icon-lg text-danger"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Bu Ay Gelen Mesaj</small>
                                    <h5 class="me-2 mb-0">@ViewBag.currentMonthMessage</h5>
                                </div>
                            </div>

                        </div>
                    </div>

                
                    <div class="tab-pane fade" id="sales" role="tabpanel" aria-labelledby="sales-tab">
                        <div class="d-flex flex-wrap justify-content-xl-between">

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-file-excel-outline me-3 icon-lg text-success"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Dashboard Excel</small>
                                    <a href="/Report/DashboardReport" class="btn btn-outline-success btn-sm mt-1">İndir</a>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-email-outline me-3 icon-lg text-warning"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Mesaj Raporu</small>
                                    <a href="/Report/ContactReport" class="btn btn-outline-warning btn-sm mt-1">İndir</a>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-bullhorn-outline me-3 icon-lg text-primary"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Duyuru Raporu</small>
                                    <a href="/Report/AnnouncementReport" class="btn btn-outline-primary btn-sm mt-1">İndir</a>
                                </div>
                            </div>

                            <div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-package-variant-closed me-3 icon-lg text-danger"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Ürün Raporu</small>
                                    <a href="/Report/ProductReport" class="btn btn-outline-danger btn-sm mt-1">İndir</a>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="tab-pane fade" id="purchases" role="tabpanel" aria-labelledby="purchases-tab">
                        <div class="d-flex flex-wrap justify-content-xl-between">

                            <div class="d-none d-xl-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-calendar-heart icon-lg me-3 text-primary"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Tarih</small>
                                    <h5 class="mb-0 d-inline-block">@DateTime.Now.ToShortDateString()</h5>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-sprout me-3 icon-lg text-danger"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Bakliyat Yönetimi</small>
                                    <h5 class="me-2 mb-0">@ViewBag.bakliyatYonetimi</h5>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-bullhorn-outline me-3 icon-lg text-success"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Ürün Pazarlama</small>
                                    <h5 class="me-2 mb-0">@ViewBag.urunPazarlama</h5>
                                </div>
                            </div>

                            <div class="d-flex border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-cow me-3 icon-lg text-warning"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Süt Üretici</small>
                                    <h5 class="me-2 mb-0">@ViewBag.sutUretici</h5>
                                </div>
                            </div>

                            <div class="d-flex py-3 border-md-right flex-grow-1 align-items-center justify-content-center p-3 item">
                                <i class="mdi mdi-flask-outline me-3 icon-lg text-danger"></i>
                                <div class="d-flex flex-column justify-content-around">
                                    <small class="mb-1 text-muted">Gübre Yönetimi</small>
                                    <h5 class="me-2 mb-0">@ViewBag.gubreYonetimi</h5>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>