<script src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/js/jquery.cookie.js" type="text/javascript"></script>

@{
    var productNamesObj = ViewBag.ProductNames ?? new string[] { };
    var productValuesObj = ViewBag.ProductValues ?? new object[] { };
}

<script>
    const productLabels = @Html.Raw(JsonSerializer.Serialize(productNamesObj));
    const productValues = @Html.Raw(JsonSerializer.Serialize(productValuesObj));

    if (document.getElementById("myChart1")) {
        new Chart("myChart1", {
            type: "bar",
            data: {
                labels: productLabels,
                datasets: [{
                    data: productValues,
                    borderWidth: 1
                }]
            },
            options: {
                legend: { display: false },
                title: { display: true, text: "@DateTime.Now.Year Ürün Değerleri" },
                scales: { yAxes: [{ ticks: { beginAtZero: true } }] }
            }
        });
    }

    var xyValues = [
        { x: 50, y: 7 },
        { x: 85, y: 12 },
        { x: 70, y: 8 },
        { x: 80, y: 9 },
        { x: 90, y: 9 },
        { x: 100, y: 9 }
    ];

    if (document.getElementById("myChart")) {
        new Chart("myChart", {
            type: "scatter",
            data: {
                datasets: [{
                    pointRadius: 4,
                    data: xyValues
                }]
            },
            options: {
                legend: { display: false },
                scales: {
                    xAxes: [{ ticks: { min: 40, max: 160 } }],
                    yAxes: [{ ticks: { min: 0, max: 16 } }]
                }
            }
        });
    }
</script>