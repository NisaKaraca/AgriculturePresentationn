@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4 class="card-title mb-1">Yeni Takım Arkadaşı Kaydı</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">Yeni personel bilgilerini gir.</p>
                </div>

                <a href="/Team/Index" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                    <i class="mdi mdi-arrow-left mr-1"></i>
                    Listeye Dön
                </a>
            </div>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Örn: Ayşe Yılmaz" asp-for="PersonName" />
                </div>

                <div class="form-group">
                    <label>Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Örn: Yazılım Geliştirici" asp-for="Title" />
                </div>

                <div class="form-group">
                    <label>Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="/images/team/1.jpg" asp-for="ImageUrl" />
                </div>

                <div class="form-group">
                    <label>Facebook</label>
                    <input type="text" class="form-control" placeholder="facebook linkini giriniz" asp-for="FacebookUrl" />
                </div>

                <div class="form-group">
                    <label>Instagram</label>
                    <input type="text" class="form-control" placeholder="instagram linkini giriniz" asp-for="InstagramUrl" />
                </div>

                <div class="form-group">
                    <label>Twitter</label>
                    <input type="text" class="form-control" placeholder="twitter linkini giriniz" asp-for="TwitterUrl" />
                </div>

                <div class="form-group">
                    <label>Web sitesi</label>
                    <input type="text" class="form-control" placeholder="varsa web site linkini ekleyin" asp-for="WebsiteUrl" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-info btn-sm d-inline-flex align-items-center">
                        <i class="mdi mdi-content-save-outline mr-1"></i>
                        Kaydet
                    </button>

                    <a href="/Team/Index" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                        <i class="mdi mdi-close-circle-outline mr-1"></i>
                        Vazgeç
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>