@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h4 class="card-title mb-1">Takım Arkadaşlarımız</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">
                        Personel kayıtlarını buradan yönetebilirsin.
                    </p>
                </div>

                <a href="/Team/AddTeam" class="btn btn-info btn-sm d-inline-flex align-items-center">
                    <i class="mdi mdi-account-plus-outline mr-1"></i>
                    Yeni Personel
                </a>
            </div>

            <div class="table-responsive pt-2">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:90px;">Foto</th>
                            <th style="width:90px;">ID</th>
                            <th>Ad Soyad</th>
                            <th>Görev</th>
                            <th style="width:140px;" class="text-center">Sil</th>
                            <th style="width:160px;" class="text-center">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ImageUrl"
                                         alt="image"
                                         style="width:42px;height:42px;object-fit:cover;border-radius:10px;" />
                                </td>

                                <td>
                                    <span class="badge badge-outline-dark">@item.TeamID</span>
                                </td>

                                <td class="font-weight-medium">@item.PersonName</td>
                                <td>@item.Title</td>

                                <td class="text-center">
                                    <a href="/Team/DeleteTeam/@item.TeamID"
                                       class="btn btn-outline-danger btn-sm d-inline-flex align-items-center"
                                       onclick="return confirm('Bu personeli silmek istediğine emin misin?');">
                                        <i class="mdi mdi-delete-outline mr-1"></i>
                                        Sil
                                    </a>
                                </td>

                                <td class="text-center">
                                    <a href="/Team/EditTeam/@item.TeamID"
                                       class="btn btn-outline-success btn-sm d-inline-flex align-items-center">
                                        <i class="mdi mdi-pencil-outline mr-1"></i>
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">
                        Toplam personel: <b>@Model?.Count</b>
                    </small>
                    <small class="text-muted">
                        Son görüntüleme: <b>@DateTime.Now.ToString("dd.MM.yyyy")</b>
                    </small>
                </div>
            </div>

        </div>
    </div>
</div>