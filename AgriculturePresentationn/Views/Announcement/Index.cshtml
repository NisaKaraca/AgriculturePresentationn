@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h4 class="card-title mb-1">Duyurular</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">
                        Duyuru ekleyebilir, düzenleyebilir ve aktif/pasif yapabilirsin.
                    </p>
                </div>

                <a href="/Announcement/AddAnnouncement" class="btn btn-info btn-sm d-inline-flex align-items-center">
                    <i class="mdi mdi-plus-circle-outline mr-1"></i>
                    Yeni Duyuru
                </a>
            </div>

            <div class="table-responsive pt-2">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:110px;">#</th>
                            <th>Başlık</th>
                            <th style="width:140px;">Tarih</th>
                            <th style="width:140px;" class="text-center">Sil</th>
                            <th style="width:160px;" class="text-center">Düzenle</th>
                            <th style="width:190px;" class="text-center">Durum Değiştir</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int sıra = 0;
                        }
                        @foreach (var item in Model)
                        {
                            sıra++;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div style="
                                                width:32px;
                                                height:32px;
                                                background:#f4f6f9;
                                                border-radius:50%;
                                                display:flex;
                                                align-items:center;
                                                justify-content:center;
                                                margin-right:8px;">

                                            <i class="mdi mdi-bullhorn-outline @(item.Status ? "text-success" : "text-secondary")"
                                               style="font-size:16px;"></i>
                                        </div>

                                        <span class="badge badge-outline-dark">@sıra</span>
                                    </div>
                                </td>

                                <td class="font-weight-medium">@item.Title</td>

                                <td>@item.Date.ToString("dd.MM.yyyy")</td>

                                <td class="text-center">
                                    <a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID"
                                       class="btn btn-outline-danger btn-sm d-inline-flex align-items-center"
                                       onclick="return confirm('Bu duyuruyu silmek istediğine emin misin?');">
                                        <i class="mdi mdi-delete-outline mr-1"></i>
                                        Sil
                                    </a>
                                </td>

                                <td class="text-center">
                                    <a href="/Announcement/EditAnnouncement/@item.AnnouncementID"
                                       class="btn btn-outline-success btn-sm d-inline-flex align-items-center">
                                        <i class="mdi mdi-pencil-outline mr-1"></i>
                                        Güncelle
                                    </a>
                                </td>

                                <td class="text-center align-middle">
                                    @if (item.Status)
                                    {
                                        <a href="/Announcement/ToggleStatus/@item.AnnouncementID"
                                           class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center justify-content-center"
                                           style="min-width:140px;">
                                            <i class="mdi mdi-toggle-switch-off-outline mr-1"></i>
                                            Pasif Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Announcement/ToggleStatus/@item.AnnouncementID"
                                           class="btn btn-outline-warning btn-sm d-inline-flex align-items-center justify-content-center"
                                           style="min-width:140px;">
                                            <i class="mdi mdi-toggle-switch-outline mr-1"></i>
                                            Aktif Yap
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">Toplam duyuru: <b>@Model?.Count</b></small>
                    <small class="text-muted">Son görüntüleme: <b>@DateTime.Now.ToString("dd.MM.yyyy")</b></small>
                </div>
            </div>

        </div>
    </div>
</div>