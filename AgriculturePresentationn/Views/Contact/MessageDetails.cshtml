@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card shadow-sm">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex align-items-center">
                        <div style="width:42px;height:42px;border-radius:50%;background:#f4f6f9;
                                    display:flex;align-items:center;justify-content:center;margin-right:10px;">
                            <i class="mdi mdi-email-outline text-muted" style="font-size:18px;"></i>
                        </div>
                        <div>
                            <h4 class="card-title mb-0">Mesaj Detayı</h4>
                            <small class="text-muted">İletişim Formu</small>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="/Contact/Index"
                           class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                            <i class="mdi mdi-arrow-left mr-1"></i>
                            Gelen Kutusu
                        </a>
                        <a href="/Contact/DeleteMessage/@Model.ContactID"
                           class="btn btn-outline-danger btn-sm d-inline-flex align-items-center"
                           onclick="return confirm('Bu mesajı silmek istediğine emin misin?');">
                            <i class="mdi mdi-delete-outline mr-1"></i>
                            Sil
                        </a>
                    </div>
                </div>

                <hr />

                <div class="mb-3">
                    <div class="row">

                        <div class="col-md-5 mb-2">
                            <small class="text-muted d-block">Gönderen</small>
                            <div class="font-weight-medium">@Model.Name</div>
                            <div class="text-muted text-truncate"
                                 style="font-size:13px; max-width:100%;">
                                @Model.Mail
                            </div>
                        </div>

                        <div class="col-md-4 mb-2">
                            <small class="text-muted d-block">Alıcı</small>
                            <div class="font-weight-medium">admin@inharvest.com</div>
                            <div class="text-muted" style="font-size:13px;">(Sistem)</div>
                        </div>

                        <div class="col-md-3 mb-2 text-md-right">
                            <small class="text-muted d-block">Tarih</small>
                            <div class="font-weight-medium">
                                @Model.Date.ToString("dd.MM.yyyy")
                            </div>
                        </div>

                    </div>

                    <div class="mt-3">
                        <small class="text-muted d-block">Konu</small>
                        <div class="font-weight-medium">
                            İletişim Formu Mesajı - @Model.Name
                        </div>
                    </div>
                </div>

                <div class="p-4"
                     style="background:#fafbfc;border:1px solid #eee;border-radius:12px;min-height:260px;">
                    <div class="text-muted mb-2" style="font-size:13px;">
                        Mesaj İçeriği
                    </div>

                    <div style="white-space:pre-line; font-size:14px; line-height:1.6;">
                        @Model.Message
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>