@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h4 class="card-title mb-1">Gelen Mesajlar</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">
                        İletişim formundan gelen mesajları görüntüleyin.
                    </p>
                </div>
            </div>

            <div class="table-responsive pt-2">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:110px;">#</th>
                            <th>Gönderen</th>
                            <th>Mail</th>
                            <th style="width:140px;">Tarih</th>
                            <th style="width:170px;" class="text-center">İşlem</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int sıra = 0;
                        }

                        @foreach (var item in Model.OrderByDescending(x => x.ContactID))
                        {
                            sıra++;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div style="width:32px;height:32px;background:#f4f6f9;border-radius:50%;
                                                        display:flex;align-items:center;justify-content:center;margin-right:8px;">
                                            <i class="mdi mdi-email-outline text-muted" style="font-size:15px;"></i>
                                        </div>

                                        <span class="badge badge-outline-dark">@sıra</span>
                                    </div>
                                </td>

                                <td class="font-weight-medium">@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>

                                <td class="text-center">
                                    <a href="/Contact/MessageDetails/@item.ContactID"
                                       class="btn btn-outline-primary btn-sm d-inline-flex align-items-center">
                                        <i class="mdi mdi-email-open-outline mr-1"></i>
                                        Mesajı Aç
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">Toplam mesaj: <b>@Model?.Count</b></small>
                    <small class="text-muted">Son görüntüleme: <b>@DateTime.Now.ToString("dd.MM.yyyy")</b></small>
                </div>
            </div>

        </div>
    </div>
</div>