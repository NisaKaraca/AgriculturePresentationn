@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin">
        <div class="card shadow-sm main-card">
            <div class="card-body">

                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="d-flex align-items-center">
                        <div class="top-icon">
                            <svg width="26" height="26" viewBox="0 0 24 24" fill="none" aria-hidden="true" style="color:#22c55e;">
                                <path d="M14 2H7a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V8l-5-6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="M14 2v6h6" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                <path d="M9 10l4 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                <path d="M13 10l-4 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="mb-1 font-weight-bold">Excel Raporları</h3>
                            <p class="text-muted mb-0 small-text">
                                Verileri hızlıca Excel formatında dışa aktar.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-4 grid-margin">
                        <div class="card report-card h-100">
                            <div class="card-body">

                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-box excel-bg">
                                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                            <path d="M14 2H7a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V8l-5-6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                            <path d="M14 2v6h6" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                            <path d="M9 16l2-3 2 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M9 13l4 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h5 class="mb-0">Demo Rapor</h5>
                                        <small class="text-muted">Örnek veri çıktısı</small>
                                    </div>
                                </div>

                                <p class="text-muted small-text">
                                    Sistem testleri ve örnek Excel çıktısı için kullanılır.
                                </p>

                                <a href="/Report/StaticReport/"
                                   class="btn btn-success btn-sm d-inline-flex align-items-center">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="mr-1">
                                        <path d="M12 3v10" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        <path d="M8 11l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        <path d="M4 21h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                    Excel’e Aktar
                                </a>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin">
                        <div class="card report-card h-100">
                            <div class="card-body">

                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-box message-bg">
                                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                            <path d="M4 6h16v12H4V6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                            <path d="m4 7 8 6 8-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h5 class="mb-0">Mesaj Raporları</h5>
                                        <small class="text-muted">İletişim formu kayıtları</small>
                                    </div>
                                </div>

                                <p class="text-muted small-text">
                                    Gelen mesajları tarih, isim ve mail bilgileriyle dışa aktarır.
                                </p>

                                <a href="/Report/ContactReport/"
                                   class="btn btn-primary btn-sm d-inline-flex align-items-center">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="mr-1">
                                        <path d="M12 3v10" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        <path d="M8 11l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        <path d="M4 21h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                    Excel’e Aktar
                                </a>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 grid-margin">
                        <div class="card report-card h-100">
                            <div class="card-body">

                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-box announcement-bg">
                                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                                            <path d="M4 11v2a2 2 0 0 0 2 2h2l6 4V7L8 11H6a2 2 0 0 0-2 2Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                            <path d="M14 7l6-3v16l-6-3" stroke="currentColor" stroke-width="2" stroke-linejoin="round" />
                                        </svg>
                                    </div>
                                    <div class="ml-3">
                                        <h5 class="mb-0">Duyuru Raporları</h5>
                                        <small class="text-muted">Duyuru listesi çıktısı</small>
                                    </div>
                                </div>

                                <p class="text-muted small-text">
                                    Duyuruları başlık, tarih ve durum bilgileriyle raporlar.
                                </p>

                                <a href="/Report/AnnouncementReport/"
                                   class="btn btn-warning btn-sm d-inline-flex align-items-center text-white">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="mr-1">
                                        <path d="M12 3v10" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                        <path d="M8 11l4 4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                        <path d="M4 21h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                                    </svg>
                                    Excel’e Aktar
                                </a>

                            </div>
                        </div>
                    </div>

                </div>

                <div class="mt-3">
                    <small class="text-muted">
                        Not: Raporlar .xlsx formatında indirilecektir.
                    </small>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .main-card {
        border-radius: 16px;
    }

    .report-card {
        transition: all 0.25s ease;
        border-radius: 14px;
        border: 1px solid #f1f1f1;
    }

    .report-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.06);
        border-color: #e5e7eb;
    }

    .icon-box {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
    }

    .top-icon {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        background: #eafff3;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .excel-bg {
        background: #eafff3;
        color: #22c55e;
    }

    .message-bg {
        background: #eef2ff;
        color: #3b82f6;
    }

    .announcement-bg {
        background: #fff7ed;
        color: #f59e0b;
    }

    .small-text {
        font-size: 13px;
    }
</style>