@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h4 class="card-title mb-1">Görsel Listesi</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">
                        Galeri görsellerini buradan yönetebilirsin.
                    </p>
                </div>

                <a href="/Image/AddImage" class="btn btn-info btn-sm d-inline-flex align-items-center">
                    <i class="mdi mdi-plus-circle-outline mr-1"></i>
                    Yeni Görsel
                </a>
            </div>

            <div class="table-responsive pt-2">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:110px;">#</th>
                            <th>Başlık</th>
                            <th style="width:140px;" class="text-center">Sil</th>
                            <th style="width:160px;" class="text-center">Güncelle</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int sıra = 0;
                        }
                        @foreach (var item in Model)
                        {
                            sıra++;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div style="width:40px;height:40px;background:#f4f6f9;border-radius:10px;
                                                        display:flex;align-items:center;justify-content:center;margin-right:10px;overflow:hidden;">
                                            <img src="@item.ImageUrl" alt="image" style="width:100%;height:100%;object-fit:cover;" />
                                        </div>

                                        <span class="badge badge-outline-dark">@sıra</span>
                                    </div>
                                </td>

                                <td class="font-weight-medium">
                                    @item.Title
                                    @if (!string.IsNullOrWhiteSpace(item.Description))
                                    {
                                        <div class="text-muted" style="font-size:13px;">
                                            @item.Description
                                        </div>
                                    }
                                </td>

                                <td class="text-center">
                                    <a href="/Image/DeleteImage/@item.ImageID"
                                       class="btn btn-outline-danger btn-sm d-inline-flex align-items-center"
                                       onclick="return confirm('Bu görseli silmek istediğine emin misin?');">
                                        <i class="mdi mdi-delete-outline mr-1"></i>
                                        Sil
                                    </a>
                                </td>

                                <td class="text-center">
                                    <a href="/Image/EditImage/@item.ImageID"
                                       class="btn btn-outline-success btn-sm d-inline-flex align-items-center"
                                       onclick="return confirm('Bu görseli güncellemek istiyor musun?');">
                                        <i class="mdi mdi-pencil-outline mr-1"></i>
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">Toplam görsel: <b>@Model?.Count</b></small>
                    <small class="text-muted">Son görüntüleme: <b>@DateTime.Now.ToString("dd.MM.yyyy")</b></small>
                </div>
            </div>

        </div>
    </div>
</div>