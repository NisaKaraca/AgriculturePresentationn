@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card shadow-sm">
            <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h4 class="card-title mb-1">Görsel Güncelle</h4>
                        <p class="text-muted mb-0" style="font-size:13px;">Seçili görselin bilgilerini düzenle.</p>
                    </div>

                    <a href="/Image/Index" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                        <i class="mdi mdi-arrow-left mr-1"></i>
                        Listeye Dön
                    </a>
                </div>

                <form class="forms-sample" method="post">
                    <input type="hidden" asp-for="ImageID" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label>Başlık</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Title" />
                    </div>

                    <div class="form-group">
                        <label>Görsel Yolu</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="Description" />
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-success btn-sm d-inline-flex align-items-center">
                            <i class="mdi mdi-check-circle-outline mr-1"></i>
                            Güncelle
                        </button>

                        <a href="/Image/Index" class="btn btn-outline-secondary btn-sm d-inline-flex align-items-center">
                            <i class="mdi mdi-close-circle-outline mr-1"></i>
                            Vazgeç
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="mb-2">Önizleme</h5>
                <p class="text-muted" style="font-size:13px;">Görselin sitede nasıl görüneceğini kontrol et.</p>

                @if (!string.IsNullOrWhiteSpace(Model?.ImageUrl))
                {
                    <img src="@Model.ImageUrl" style="width:100%;max-height:360px;object-fit:cover;border-radius:12px;border:1px solid #eee;" />
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        Görsel yolu boş görünüyor.
                    </div>
                }
            </div>
        </div>
    </div>
</div>