@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h4 class="card-title mb-1">Hizmet Listesi</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">
                        Sistemde kayıtlı hizmetleri buradan görüntüleyebilir, düzenleyebilir veya silebilirsin.
                    </p>
                </div>

                <a href="/Service/AddService" class="btn btn-info btn-sm d-inline-flex align-items-center">
                    <i class="mdi mdi-plus-circle-outline mr-1 d-inline-flex align-items-center"></i>
                    Yeni Hizmet
                </a>
            </div>

            <div class="table-responsive pt-2">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="thead-light">
                        <tr>
                            <th style="width:80px;">#</th>
                            <th>Başlık</th>
                            <th style="width:140px;" class="text-center">Sil</th>
                            <th style="width:160px;" class="text-center">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-outline-dark">@item.ServiceID</span>
                                </td>

                                <td class="font-weight-medium">
                                    @item.Title
                                </td>

                                <td class="text-center">
                                    <a href="/Service/DeleteService/@item.ServiceID"
                                       class="btn btn-outline-danger btn-sm d-inline-flex align-items-center"
                                       onclick="return confirm('Bu hizmeti silmek istediğine emin misin?');">
                                        <i class="mdi mdi-delete-outline mr-1"></i> Sil
                                    </a>
                                </td>

                                <td class="text-center">
                                    <a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success  btn-sm d-inline-flex align-items-center">
                                        <i class="mdi mdi-pencil-outline mr-1"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">
                        Toplam kayıt: <b>@Model?.Count</b>
                    </small>

                    <small class="text-muted">
                        Son güncelleme: <b>@DateTime.Now.ToString("dd.MM.yyyy")</b>
                    </small>
                </div>
            </div>

        </div>
    </div>
</div>