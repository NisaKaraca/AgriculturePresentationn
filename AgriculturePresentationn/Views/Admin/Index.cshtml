@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Admin Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card shadow-sm">
        <div class="card-body">

            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h4 class="card-title mb-1">Admin Listesi</h4>
                    <p class="text-muted mb-0" style="font-size:13px;">Admin hesaplarını buradan yönetebilirsin.</p>
                </div>
                <a href="/Admin/AddAdmin" class="btn btn-info btn-sm d-flex align-items-center">
                    <i class="mdi mdi-account-plus me-1"></i> Yeni Admin
                </a>
            </div>

            <div class="table-responsive pt-2">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th style="width:70px;">#</th>
                            <th>Kullanıcı Adı</th>
                            <th style="width:140px;">Sil</th>
                            <th style="width:140px;">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.AdminID</td>
                                <td>@item.Username</td>
                                <td class="text-center">
                                    <a href="/Admin/DeleteAdmin/@item.AdminID"
                                       class="btn btn-outline-danger btn-sm d-inline-flex align-items-center"
                                       onclick="return confirm('Bu admini silmek istediğine emin misin?');">
                                        <i class="mdi mdi-delete-outline me-1"></i> Sil
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/EditAdmin/@item.AdminID"
                                       class="btn btn-outline-success btn-sm d-inline-flex align-items-center">
                                        <i class="mdi mdi-pencil-outline me-1"></i> Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>